<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <h1>Dictionary:</h1>
  <ul>
    <% if (words.length) { %>
      <% words.forEach(({ id, words_en, createdAt, words_ua, activ }) => { %>
        <article>
          <h2>
            <a href="/words/<%= id %>"><%= words_en %></a>
          </h2>
          <p><%= words_ua %></p>
          <div class="info">
            <span><%= createdAt.toLocaleDateString() %></span>
            <span><%= activ %></span>
          </div>
          <button class="btn-delete" data-id="<%= id %>">
            <i class="fas fa-trash-alt" data-id="<%= id %>"></i>
          </button>
        </article>
      <% }) %>
    <% } %>
  </ul>
